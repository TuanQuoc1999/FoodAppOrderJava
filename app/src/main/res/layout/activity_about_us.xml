<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <LinearLayout
        android:background="?attr/colorPrimary"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_marginLeft="32dp"
            android:layout_gravity="center_vertical"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="About Us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/mybg"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/txtSlogan"
            android:textSize="40sp"
            android:text="@string/slogan"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txtSlogan2"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/slogan2"
            android:layout_width="300dp"
            android:textSize="20sp"
            android:layout_marginTop="@dimen/default_padding_top"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Address: Linh Trung, Thủ Đức, Hồ Chí Minh, Việt Nam"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:drawableBottom="@drawable/underline"
            android:layout_marginTop="@dimen/margin_humongous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Contact: 0388084944"
            android:layout_marginTop="@dimen/margin_medium"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:drawableBottom="@drawable/underline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>